<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="#969696" />
            <corners android:radius="20dp" />
            <stroke android:width="5dp" android:color="#969696" />
            <padding
                android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                />
        </shape>

    </item>


    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#45E022" />
            <corners android:radius="20dp" />
            <stroke android:width="5dp" android:color="#45E022" />
            <padding
                android:top="1dp"
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                />
        </shape>

    </item>

</selector>