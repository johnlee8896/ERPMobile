<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/underline"
    android:paddingTop="5dp"
    android:paddingBottom="5dp"
    tools:minHeight="@dimen/dimen_size_150">

    <ImageView
        android:id="@+id/plan_list_dot_imageView"
        android:layout_width="20dp"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/dimen_size_20"
        android:adjustViewBounds="false"
        android:background="@drawable/border"
        android:cropToPadding="false"
        android:scaleType="centerInside"
        app:srcCompat="@mipmap/point_green" />

    <TextView
        android:id="@+id/plan_list_work_line_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/plan_list_dot_imageView"
        android:gravity="center"
        android:text="装配A1线"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_10"
        android:layout_toRightOf="@id/plan_list_work_line_textView"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/plan_list_title_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/plan_list_type_textView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                tools:text="类型"
                android:textSize="17sp" />

            <TextView
                android:id="@+id/plan_list_wc_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/dimen_size_15"
                android:clickable="false"
                android:padding="2dp"
                tools:text="生产线分组"
                android:textSize="17sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/plan_list_plan_detail_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:textSize="17sp"
            tools:text="生产线分组生产线分组生产线分组生产线分组生产线分组" />

        <TextView
            android:id="@+id/plan_list_remark_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:clickable="false"
            android:padding="2dp"
            android:textSize="17sp"
            tools:text="备注" />
    </LinearLayout>


</RelativeLayout>