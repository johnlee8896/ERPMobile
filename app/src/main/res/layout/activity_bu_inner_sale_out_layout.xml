        <!--</android.support.v7.widget.RecyclerView>-->

        <com.chinashb.www.mobileerp.widget.CustomRecyclerView
            android:id="@+id/inner_sale_out_recyclerView"
            android:layout_width="match_parent"
            tools:listitem="@layout/item_scan_bar_code_layout"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>

