<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dimen_size_10"
    android:background="@color/white"
    android:padding="@dimen/dimen_size_10">


    <LinearLayout
        android:id="@+id/task_left_image_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/task_creater_iamgeView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:adjustViewBounds="true"
            android:cropToPadding="false"
            android:scaleType="fitStart"
            app:srcCompat="@mipmap/monster_mike" />


        <TextView
            android:id="@+id/task_tv_task_creater"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:background="#FefeFe"
            android:scaleType="fitStart"
            android:text="creater" />

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/task_right_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dimen_size_10"
        android:layout_toRightOf="@id/task_left_image_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/task_tv_task_create_time_info"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="任务提出时间" />

        <TextView
            android:id="@+id/task_tv_task_create_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_toRightOf="@id/task_tv_task_create_time_info"
            android:gravity="center_horizontal"
            android:text="Task Create Time" />

        <TextView
            android:id="@+id/task_tv_task_title_info"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_tv_task_create_time_info"
            android:layout_marginTop="@dimen/dimen_size_5"
            android:text="任务标题如下" />

        <!--<TextView-->
            <!--android:id="@+id/task_tv_task_title"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_below="@id/task_tv_task_create_time_info"-->
            <!--android:layout_marginLeft="@dimen/dimen_size_10"-->
            <!--android:layout_toRightOf="@id/task_tv_task_title_info"-->
            <!--android:singleLine="false"-->
            <!--android:textColor="@color/black"-->
            <!--android:textSize="@dimen/text_size_18"-->
            <!--tools:text="任务标" />-->

        <TextView
            android:id="@+id/task_tv_task_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_tv_task_title_info"
            android:singleLine="false"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18"
            tools:text="任务标" />

        <TextView
            android:id="@+id/task_tv_task_executor_info"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_tv_task_title"
            android:layout_marginTop="@dimen/dimen_size_5"
            android:gravity="center_vertical"
            android:text="任务执行者" />

        <TextView
            android:id="@+id/task_tv_task_executor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_tv_task_title"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_toRightOf="@id/task_tv_task_executor_info"
            android:gravity="center_horizontal"
            android:singleLine="false"
            android:text="李伟锋"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/task_tv_task_finish_time_info"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_tv_task_executor_info"
            android:layout_marginTop="@dimen/dimen_size_5"
            android:text="要求完成时间" />

        <TextView
            android:id="@+id/task_tv_task_finish_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_tv_task_executor"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_toRightOf="@id/task_tv_task_finish_time_info"
            android:gravity="center_horizontal"
            android:singleLine="false"
            android:text="2020-01-07"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />

        <TextView
            android:id="@+id/task_tv_task_finish_time_done_info"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_tv_task_finish_time_info"
            android:layout_marginTop="@dimen/dimen_size_5"
            android:text="实际完成时间" />

        <TextView
            android:id="@+id/task_tv_task_finish_time_done"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/task_tv_task_finish_time"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_toRightOf="@id/task_tv_task_finish_time_done_info"
            android:gravity="center_horizontal"
            android:singleLine="false"
            android:text="2020-01-07"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18" />


    </RelativeLayout>


</RelativeLayout>