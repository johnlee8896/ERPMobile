<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="79dp"
    android:background="@drawable/ic_bottom_tab_bar_bg"
    >

    <com.chinashb.www.mobileerp.widget.group.GroupImageTextLayout
        android:id="@+id/navigation_home_layout"
        style="@style/style_home_bottom_navigation_item"
        app:app_image_src="@drawable/selector_navigation_tab_home"
        app:app_text="首页"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="7dp"
        app:layout_constraintRight_toLeftOf="@id/navigation_mine_layout"
        />


    <com.chinashb.www.mobileerp.widget.group.GroupImageTextLayout
        android:id="@+id/navigation_mine_layout"
        style="@style/style_home_bottom_navigation_item"
        app:app_image_src="@drawable/selector_navigation_tab_mine"
        app:app_text="我的"
        app:layout_constraintBottom_toBottomOf="@id/navigation_home_layout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@id/navigation_home_layout"
        />

</android.support.constraint.ConstraintLayout>