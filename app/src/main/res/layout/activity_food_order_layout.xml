<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <com.chinashb.www.mobileerp.widget.ClockPanelLayout
        android:id="@+id/food_clock_panel_Layout"
        android:layout_width="245dp"
        android:layout_height="245dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:background="#0000"
        app:app_ring_color="@color/color_EEEEEE"
        app:app_ring_width="13dp"
        app:app_exception_color="#E94156"
        app:app_normal_color="#355FFF"
        app:app_logo_src="@mipmap/ic_clock_blue"
        app:app_logo_src_exception="@mipmap/ic_clock_red"
        app:app_time_text_color="#8C8C8C"
        app:app_time_text_margin_ring="5dp"
        app:app_time_text_size="10sp">

        <LinearLayout
            android:id="@+id/food_attendance_Layout"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerInParent="true"
            android:background="@drawable/selector_circle_blue_bg_graient"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/food_current_time_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                tools:text="09:23:34"
                android:textColor="@color/white"
                android:textSize="22sp" />

            <TextView
                android:id="@+id/food_attendance_info_TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="订餐"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_18" />

        </LinearLayout>

    </com.chinashb.www.mobileerp.widget.ClockPanelLayout>
</LinearLayout>