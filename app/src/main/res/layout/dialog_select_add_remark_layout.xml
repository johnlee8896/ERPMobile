    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:background="@drawable/shape_white_bg_conner_4dp"
        android:showDividers="middle"
        android:divider="@drawable/shape_divide_line_horizontal"
        android:paddingTop="@dimen/dimen_size_10">
        <TextView
            android:id="@+id/dialog_remark_title_textView"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:singleLine="true"
            android:text="请选择或添加备注"
            android:textColor="#333"
            android:textSize="18sp"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/stock_out_more_remark_EditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_45"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="请添加备注信息"
            android:paddingLeft="@dimen/dimen_size_20"
            android:paddingRight="@dimen/dimen_size_10"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/shape_custom_edit_text_cursor_bg"
            android:textSize="@dimen/text_size_14" />
        <com.chinashb.www.mobileerp.widget.CustomRecyclerView
            android:id="@+id/dialog_select_remark_recyclerView"
            android:paddingLeft="@dimen/dimen_size_20"
            android:paddingRight="@dimen/dimen_size_10"
            android:layout_width="match_parent"
            android:layout_height="350dp"/>

        <LinearLayout
            android:id="@+id/dialog_remark_bottom_button_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:orientation="horizontal"
            android:showDividers="middle"
            >

            <Button
                android:id="@+id/dialog_remark_confirm_Button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:background="@drawable/selector_comm_click_bg"
                android:text="确定"
                android:textColor="#333"
                android:textSize="16sp"
                android:layout_marginLeft="@dimen/dimen_size_10"
                android:layout_marginRight="@dimen/dimen_size_10"
                />

            <Button
                android:id="@+id/dialog_remark_cancel_Button"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:layout_marginLeft="@dimen/dimen_size_10"
                android:layout_marginRight="@dimen/dimen_size_10"
                android:background="@drawable/selector_comm_click_bg"
                android:text="取消"
                android:textColor="#333"
                android:textSize="16sp"
                />
        </LinearLayout>




    </LinearLayout>
