<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.chinashb.www.mobileerp.widget.TitleLayoutManagerView
        android:id="@+id/supplier_return_titleLayoutView"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:app_title_text="供应商退货" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingLeft="20dp"
            android:text="供应商退货"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/supplier_return_scan_camera_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/dimen_size_20"
            android:text="相机扫描物料" />
        <EditText
            android:id="@+id/supplier_return_input_EditText"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_45"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="接收扫描结果"
            android:paddingLeft="@dimen/dimen_size_20"
            android:paddingRight="@dimen/dimen_size_10"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/shape_custom_edit_text_cursor_bg"
            android:textSize="@dimen/text_size_14" />
        <Button
            android:id="@+id/supplier_return_remark_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/dimen_size_20"
            android:text="添加选择备注" />
        <TextView
            android:id="@+id/supplier_return_remark_TextView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dimen_size_45"
            android:background="@color/transparent"
            android:gravity="center_vertical"
            android:hint="备注信息"
            android:textColorHint="@color/black"
            android:paddingLeft="@dimen/dimen_size_20"
            android:paddingRight="@dimen/dimen_size_10"
            android:textColor="@color/black"
            android:textCursorDrawable="@drawable/shape_custom_edit_text_cursor_bg"
            android:textSize="@dimen/text_size_14" />
        <Button
            android:id="@+id/supplier_return_confirm_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen_size_10"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="@dimen/dimen_size_20"
            android:text="确定退货" />


    </LinearLayout>
        <com.chinashb.www.mobileerp.widget.CustomRecyclerView
            android:id="@+id/supplier_return_recyclerView"
            android:layout_width="match_parent"
            tools:listitem="@layout/item_scan_bar_code_layout"
            android:layout_height="match_parent"/>





</LinearLayout>

