<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/top_title_back_ImageView"
        android:layout_width="@dimen/dimen_size_50"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:background="@drawable/selector_item_click_bg_gray"
        android:foreground="?android:attr/selectableItemBackground"
        android:scaleType="center"
        android:src="@mipmap/ic_back_dark" />

    <TextView
        android:id="@+id/top_title_content_TextView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/dimen_size_50"
        android:layout_marginRight="@dimen/dimen_size_50"
        android:ellipsize="middle"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/black"
        android:textSize="@dimen/text_size_17" />


</RelativeLayout>