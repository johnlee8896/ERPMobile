<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.chinashb.www.mobileerp.talk.ConversationActivity">

    <LinearLayout
        android:id="@+id/linearLayout_Title"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvconversation_withwho"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="对话标题..(who, task,group)" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout_Messages"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_conversation_msgs"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:background="@android:color/holo_purple"
            tools:itemCount="17"
            tools:listitem="@layout/recycler_view_item">


        </android.support.v7.widget.RecyclerView>

        <com.chinashb.www.mobileerp.widget.EmptyLayoutManageView
            android:id="@+id/conversation_emptyManagerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:app_empty_image_src="@mipmap/ic_empty_no_message"
            app:app_empty_text="没有消息" />

        <LinearLayout
            android:id="@+id/linearLayout_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="40dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/conversation_image_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="图片" />

                <Button
                    android:id="@+id/conversation_video_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="视频" />

                <Button
                    android:id="@+id/conversation_file_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="文件" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_send_new_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="6"
                    android:ems="10"
                    android:hint="请发送消息"
                    android:inputType="textMultiLine"
                    android:singleLine="false" />

                <Button
                    android:id="@+id/btn_send_new_conversation_msg"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:text="发送" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>
