<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<LinearLayout-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:orientation="vertical">-->


    <!--<TextView-->
    <!--android:id="@+id/tv_stock_query_part"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_weight="1"-->
    <!--android:text="零部件仓库库存查询"-->
    <!--/>-->
    <com.chinashb.www.mobileerp.widget.TitleLayoutManagerView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:app_title_text="零部件仓库库存查询" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="@dimen/dimen_size_5"
        android:orientation="horizontal"
        android:showDividers="middle"
        >

        <Button
            android:id="@+id/freeze_inv_Button"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:text="库存冻结"
            android:textColor="#333"
            android:textSize="16sp"
            android:layout_marginLeft="@dimen/dimen_size_100"
            android:layout_marginRight="@dimen/dimen_size_10"
            />

        <Button
            android:id="@+id/unfreeze_inv_Button"
            android:layout_width="140dp"
            android:layout_height="45dp"
            android:layout_marginLeft="@dimen/dimen_size_10"
            android:layout_marginRight="@dimen/dimen_size_10"
            android:text="解除冻结"
            android:textColor="#333"
            android:textSize="16sp"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/tv_stock_query_current_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="物料批次"
        android:textSize="16sp"
        android:textStyle="bold" />


    <!--</LinearLayout>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textviewbluebackground"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:id="@+id/tv_part_inv_item_version"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="版本"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_part_inv_item_status"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"

            android:text="状态"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_part_inv_item_ist"
            android:layout_width="40dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="单元"
            android:textColor="#ffffff" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textviewbluebackground"
        android:orientation="horizontal"
        android:visibility="gone"
        tools:visibility="visible">


        <TextView
            android:id="@+id/tv_part_inv_item_lotid"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="LotID"
            android:textColor="#ffffff"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tv_part_inv_item_indate"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="入库日期"
            android:textColor="#ffffff" />


        <TextView
            android:id="@+id/tv_part_inv_item_lotno"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="入库批次"
            android:textColor="#ffffff" />

        <TextView
            android:id="@+id/tv_part_inv_item_manudate"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="生产日期"
            android:textColor="#ffffff"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_part_inv_item_manulot"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="center_vertical|center_horizontal"
            android:text="生产批次"
            android:textColor="#ffffff" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/textviewbluebackground"
        android:orientation="horizontal"
        android:visibility="gone">


        <TextView
            android:id="@+id/tv_part_inv_item_lot_tag"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="left|center_horizontal"
            android:text="标注"
            android:textColor="#ffffff" />


        <TextView
            android:id="@+id/tv_part_inv_item_qty"
            android:layout_width="20dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:clickable="false"
            android:gravity="right|center_vertical"
            android:text="库存"
            android:textColor="#ffffff"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_query_product_inv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:clickable="true"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

</LinearLayout>

